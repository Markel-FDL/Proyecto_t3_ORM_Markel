<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.mycompany.proyectos_t3_orm_markel_final.PiezasEntity" table="piezas" schema="proyecto_t3">
        <id name="codigo">
            <column name="codigo" sql-type="varchar(6)" length="6"/>
        </id>
        <property name="nombre">
            <column name="nombre" sql-type="varchar(20)" length="20"/>
        </property>
        <property name="precio">
            <column name="precio" sql-type="float" precision="-1"/>
        </property>
        <property name="descripcion">
            <column name="descripcion" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
        <set name="gestionsByCodigo" inverse="true">
            <key>
                <column name="piezas_codigo"/>
            </key>
            <one-to-many not-found="ignore" class="com.mycompany.proyectos_t3_orm_markel_final.GestionEntity"/>
        </set>
    </class>
</hibernate-mapping>